<h1>Edit {{pirate.description}}</h1>

<div class="row">
    <form action="/pirates/{{pirate.id}}?_method=PUT" method="POST" class="col-md-6 col-md-offset-3">
    <div class="form-group">
      <label for="name">name:</label>
      <input type="text" name="name" class="form-control" value="{{pirate.name}}">
    </div>
    <div class="form-group">
      <label for="birthplace">birthplace:</label>
      <input type="text" name="birthplace" class="form-control" value="{{pirate.birthplace}}">
    </div>
    <div class="form-group">
      <label for="death_year">death year:</label>
      <input type="number" name="death_year" class="form-control" value="{{pirate.death_year}}" />
    </div>
    <div class="form-group">
        <label for="base">base</label>
<input type="text" name="base" class="form-control" value="{{pirate.base}}"/>
    </div>
    <div class="form-group">
<label for="nickname">nickname:</label>
<input type="text" name="nickname" class="form-control" value ="{{pirate.nickname}}">
    </div>
    <div>
      <input type="submit" value="Update Pirate" class="btn btn-default">
    </div>
  </form>
</div>